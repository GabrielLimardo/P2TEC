<% 
function round(val) {
  return Math.round(val*100)/100;
} 
%>

<html lang="en">
	<%- include('./partial/head', {title: 'Inicio'}) %> 
	<body>
		<!-- Header -->
	<%- include('./partial/header') %>
	<!-- /Header -->
	 <div class="main.body">
		 <div class="imagenus">
		<img src="img/MEJORESJUEGOS.jpg" alt="juegos">
