<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partial/head', {title: 'create'}) %>
<body>
	<!-- Header -->
	<%- include('./partial/header', {user}) %>
	<!-- /Header -->

	<div class="productoparaeditar">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= product.name %> </i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/lista/edit/<%= product.id %>?_method=put" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input" value="<%= product.name %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%= product.price %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="" disabled>Elegí</option>
							<% if (product.category == 'Notebooks') { %>
								<option value="Notebooks" selected>Notebooks</option>
								<option value="Monitores">Monitores</option>
								<option value="Memorias RAM">Memorias RAM</option>
								<option value="Microprocesadores">Microprocesadores</option>
					
							<option value="Proyectores">Proyectores</option>
							<option value="Conectividad">Conectividad</option>
							<option value="Soportes">Soportes</option>
							<option value="Tabletas">Tabletas</option>
							<option value="Teclados">Teclados</option>
	
							<% } else { %>
								<option value="Notebooks">Notebooks</option>
								<option value="Monitores" selected>Monitores</option>
								<option value="Memorias RAM">Memorias RAM</option>
								<option value="Microprocesadores">Microprocesadores</option>
			
							<option value="Proyectores">Proyectores</option>
							<option value="Conectividad">Conectividad</option>
							<option value="Soportes">Soportes</option>
							<option value="Tabletas">Tabletas</option>
							<option value="Teclados">Teclados</option>
							<% } %>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= product.descripcion %></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partial/footer') %>
	<!-- /footer -->
</body>	
</html>