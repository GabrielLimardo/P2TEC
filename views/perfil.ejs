            </select>                                    </div>
                                    <div class="col-lg-12 col-xs-12 mt-3 pl-0">
                                    <button type="submit" class="btn btn-blue"><i class="fa fa-check" aria-hidden="true"></i> Actualizar dirección</button>
                                    </div>
                                    
                                </div> 
                         </form>   
                         
                         </tbody>
                        </table>


                        </div>
                    </div>
                  
                </div>
            </div>
            
            
                         
            
        </div>
    </div>
</section>

<%- include('partial/footer') %>
</body>
