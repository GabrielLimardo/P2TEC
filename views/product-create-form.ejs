<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partial/head', {title: 'create'}) %>
<body>
	<!-- Header -->
	<%- include('./partial/header', {user}) %>
	<!-- /Header -->

	<link rel="stylesheet" href="/css/create.css">
	<div class="contenedorprincpaldecreate">
		<div class="row">
			<div class="col12">
				<h2 class="products-title">Formulario de creación de productos</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/lista/create/" method="POST">
				<div class="rowproduct-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:></label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<option value="Componentes">Componentes</option>
							<option value="Notebooks">Notebooks</option>
							<option value="Monitores">Monitores</option>
							<option value="Perisfericos">Perisfericos</option>
							
						
						</select>
					</div>
					<div class="col2">
						<label for="description" class="form-label">Descipción: </label>
						<textarea name="description" id="description" class="form-input"></textarea>
					</div>
					<div class="cargadeimagenproducto">
						<label for="image" class="form-label">imagen:</label>
						<input type="file" id="image" name="image" class="image">
						<div>
					<div class="col2">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partial/footer') %>
	<!-- /footer -->
</body>	
</html>