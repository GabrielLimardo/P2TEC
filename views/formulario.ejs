<!DOCTYPE html>
<html lang="en">
<%- include('./partial/head', {title: 'Formulario'}) %>
<link rel="stylesheet" href="/css/formulario.css">

<body>
    <!-- Header -->
    <%- include('./partial/header') %>
    <!-- /Header -->
    <div class="container row no-wrap">
        <main>
            <div class="loginCompleto">
                <div class="loginTitulo">Acceder</div>
                <div class="form-container">
                    <form class="loginForm" action="/register" method="POST">
                        <div class="field-group">
                            <div class="email">
                                <label for="email">Nombre de usuario o correo electrónico</label>
                                <input class="emailInput" type="email" id="email" name="email" placeholder="Email"
                                    value="" required>
                            </div>
                            <div class="password">
                                <label for="password">Contraseña</label>
                                <input class="passwordInput" type="password" id="passsword" name="password"
                                    placeholder="Contraseña" value="" required>
                            </div>
                            <div class="check row no-wrap">
                                <label class="rememberMe" for="remember-me">Recordarme</label>
                                <input class="rememberMeCheckbox" type="checkbox" id="remember-me" name="remember-me"
                                    value="">
                            </div>
                            <button class="iniciarSesion" type="submit">Iniciar Sesión</button>
                        </div>
                    </form>
                </div>
                <div class="logoFormulario">
                    <img src="/img/numero.png" alt="logopP2Tec">
                </div>
            </div>
        </main>
        <main>
            <div class="registerCompleto">
                <div class="registerTitulo">Registrarse</div>
                <section class="form-container2">
                    <form class="registerForm" action="/register" method="POST">
                        <div class="field-group"><br>
                            <div class="username">
                                <label for="username">Nombre de usuario *</label>
                                <input class="usernameInput" type="username" id="username" name="username"
                                    placeholder="Nombre de usuario" value="" required>
                            </div>
                            <div class="email">
                                <label for="email">Email *</label>
                                <input class="emailInput" type="email" id="email" name="email" placeholder="Email"
                                    value="" required>
                                    <p class="error">
                                        <% if (typeof errors != 'undefined' ) { %>
                                            <% if (errors.email) { %>
                                                <%= errors.email.msg %>
                                             <% } %>
                                        <% } %>
                                    </p>
                            </div>
                            <div class="password">
                                <label for="password">Contraseña *</label>
                                <input class="passwordInput" type="password" id="passsword" name="password"
                                    placeholder="Contraseña" value="" required>
                                    <p class="error">
                                        <% if (typeof errors != 'undefined' ) { %>
                                            <%= errors.password ? errors.password.msg : ''%>
                                        <% } %>
                                    </p>
                            </div>
                            <div class="password">
                                <label for="password">Repetir Contraseña *</label>
                                <input class="passwordInput" type="password" id="passsword" name="retypepassword"
                                    placeholder="Repetir contraseña" value="" required>
                                    <p class="error">
                                        <% if (typeof errors != 'undefined' ) { %>
                                            <%= errors.password ? errors.password.msg : ''%>
                                        <% } %>
                                    </p>
                            </div>
                            <button class="registerButton" type="submit" >Registrarse</button>
                        </div>
                    </form>
                </section>
            </div>
        </main>
    </div>

    <%- include('partial/footer') %>


</body>

</html>