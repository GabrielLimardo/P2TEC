<!DOCTYPE html>
<html lang="en">
<%- include('./partial/head', {title: 'Formulario'}) %>
<link rel="stylesheet" href="/css/formulario.css">

<body>
    <!-- Header -->
    <%- include('./partial/header') %>
    <!-- /Header -->
    <div class="container row no-wrap">
        <main>
            <div class="loginTitulo">Acceder</div>
            <div class="form-container">
                <form class="loginForm" action="#" method="get">
                    <div class="field-group">
                        <div class="email">
                            <label for="email">Nombre de usuario o correo electrónico</label>
                            <input class="emailInput" type="email" id="email" name="email" placeholder="Email" value=""
                                required>
                        </div>
                        <div class="password">
                            <label for="password">Contraseña</label>
                            <input class="passwordInput" type="password" id="passsword" name="password"
                                placeholder="Contraseña" value="" required>
                        </div>
                        <div class="check row no-wrap">
                            <label class="rememberMe" for="remember-me">Recordarme</label>
                            <input class="rememberMeCheckbox" type="checkbox" id="remember-me" name="remember-me"
                                value="">
                        </div>
                        <button class="iniciarSesion" type="submit" name="send">Iniciar Sesión</button>
                    </div>
                </form>
            </div>
            <div class="logoFormulario">
                <img src="/img/numero.png" alt="logopP2Tec">
            </div>
        </main>

        <main>
            <div class="registerTitulo">Registrarse</div>
            <section class="form-container2">
                <form class="registerForm" action="#" method="get">
                    <div class="field-group"><br>
                        <div class="username">
                            <label for="username">Nombre de usuario *</label>
                            <input class="usernameInput" type="username" id="username" name="username"
                                placeholder="Nombre de usuario" value="" required>
                        </div>
                        <div class="email">
                            <label for="email">Email *</label>
                            <input class="emailInput" type="email" id="email" name="email" placeholder="Email" value=""
                                required>
                        </div>
                        <div class="password">
                            <label for="password">Contraseña *</label>
                            <input class="passwordInput" type="password" id="passsword" name="password"
                                placeholder="Contraseña" value="" required>
                        </div>
                        <div class="password">
                            <label for="password">Repetir Contraseña *</label>
                            <input class="passwordInput" type="password" id="passsword" name="password"
                                placeholder="Repetir contraseña" value="" required>
                        </div>
                        <button class="registerButton" type="submit" name="send">Registrarse</button>
                    </div>
                </form>
            </section>
        </main>
    </div>

    <%- include('partial/footer') %>


</body>

</html>