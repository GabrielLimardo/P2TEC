<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partial/head', {title: 'Carrito'}) %>
<link rel="stylesheet" href="/css/carrito.css">

<body>
   <!-- Header -->
   <%- include('./partial/header', {user}) %>
   <!-- /Header -->

   <div class="productoscarrito">
      <% if(items.length != 0){ %>
      <div class="productoscarrito1">
         <div class="">
            <h1 class="products-title">Carrito de compras</h1>
         </div>
      </div>
      <div class="product-detail">
         <div class="w-100">
            <div class="fullCart">
               <% items.forEach(item => { %>

               <div class=" mt-3">
                  <section class="itemCart">
                     <figure class="" >
                        <img class="imgWidthCart" style='border: 1px solid grey' src="/img/<%= item.product.image %>" alt="<%= item.product.name %>">
                     </figure>
                     <section class="col-6 descCart">
                        <p><%= item.product.name %></p>
                        <p class="product-detail-price">
                           $<%= item.salePrice; %>
                        </p>
                        <form action="/carrito/deleteFromCart" method="POST" class="mt-4">
                           <input type="hidden" name="itemId" value="<%= item.id %>">
                           <button type="submit" class="action-button delete">ELIMINAR</button>
                        </form>
                        
                     </section>
                     <section class="">
                        <p>Cantidad: <%= item.quantity %></p>

                     </section>
                  </section>
               </div>
               
               <% }); %>
               
            </div>
            <div class="">
               <article class="product-detail-info">
                  <h2 class="product-detail-title">
                     Total: $<%= items.reduce((total, item) => total + item.subTotal, 0) %>
                  </h2>
                  <hr>

                  <form action="/carrito/shop" method="POST" class="buy-now-cart">
                     <input type="hidden" name="userId" value="<%= locals.user.id %>">
                     <button type="submit" class="mt-4 buy-now-button">COMPRAR</button>
                  </form>
                  
                  
               </article>
            </div>
         </div>
      </div>
      <% } else { %>
      <div class="">
         <h2 class="products-title" style="padding: 100px 0; color: tomato;">Todavia no agregaste productos al carrito</h2>
      </div>
      <% } %>
   </div>

   <!-- footer -->
   <%- include('partial/footer') %>
   <!-- /footer -->
</body>

</html>