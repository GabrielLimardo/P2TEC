<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partial/head', {title: 'Hystory', image: '/img/numero.png'}) %>

<body>
   <!-- Header -->
   <%- include('./partial/header', {user}) %>
   <!-- /Header -->

   <div class="container products-wrapper">
      <div class="row">
         <div class="col-12">
            <h1 class="products-title">Carrito de compras</h1>
         </div>
      </div>
      <div class="hystorial1">
         <div class="hystorial2">
            <div class="hystorial3">
               <% if(carts.length != 0){ %>
               <% carts.forEach(cart => { %>
               <a href="/carrito/buy-detail/<%= cart.id %>">
                  <div class="col-12 mt-3">
                     <section class="row">
                        <h4 class="col-4"><%= new Date(cart.createdAt).toLocaleDateString() %> </h4>
                        <section class="col-8 row info">
                           <div class="col-6">
                              <ul>
                                 <% cart.items.forEach(item => { %>
                                    <li style="font-size: 12px;">
                                       <small>
                                          <%= item.product.name %> x<%= item.quantity %>
                                       </small>
                                    </li>
                                 <% }) %>
                              </ul>
                           </div>
                           <div class="col-6">
                              <p class="product-detail-price">
                                 $<%= cart.total %>
                              </p>
                           </div>
                        </section>
                        <section class="col-3">
                           
                        </section>
                     </section>
                  </div>
               </a>
               <hr>
               <% }); %>
               
               <% } else { %>
               <div class="col-12">
                  <h2 class="products-title" style="padding: 100px 0; color: tomato;">AÃºn no tienes compras</h2>
               </div>
               <% } %>
            </div>
            <div class="col-12 col-lg-4">
               <article class="product-detail-info">
                  <h2 class="product-detail-title">
                     <%= locals.user.username %>
                  </h2>
                  <hr>
                  
               </article>
            </div>
         </div>
      </div>
   </div>

   <!-- footer -->
   <%- include('partial/footer') %>
   <!-- /footer -->
</body>

</html>